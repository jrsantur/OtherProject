<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.startup.junior.otherproject.DetallesEventoActivity"
    android:orientation="vertical">

    <!--
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
    />
    -->



   <com.manuelpeinado.fadingactionbar.view.ObservableScrollView
        android:id="@+id/scrollview"
        android:text="@string/hello_world"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:overScrollMode="never"
        android:fadingEdge="none"
        android:fadingEdgeLength="1dp"
        android:fillViewport="false"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:id="@+id/header"
                    android:background="@drawable/difusion"
                    android:transitionName="transition_album_cover"
                    />



                <!--
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbarOpaco"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent" />
                    -->

                <!--
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient"/>
                    -->
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/calendar"
                    android:textColor="@android:color/black"
                    android:background="@null"
                    android:text="00 MMM"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:textSize="12sp"/>


                <Button
                     android:id="@+id/button2"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:drawableTop="@drawable/clock"
                     android:textColor="@android:color/black"
                     android:background="@null"
                     android:text="00:00 PM"
                     android:gravity="center"
                     android:paddingTop="8dp"
                     android:textSize="12sp"/>

                <Button
                    android:id="@+id/location_map"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/location"
                    android:textColor="@android:color/black"
                    android:background="@null"
                    android:text="0 KM"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/multiple"
                    android:textColor="@android:color/black"
                    android:background="@null"
                    android:text="00/00"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:textSize="12sp"
                   />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:padding="8dp"
                android:orientation="vertical"
                >
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detalles"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/apuntae"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/primary"
                    android:text="Apuntate"
                    android:textColor="@android:color/white"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="A tus amigos"
                    android:background="@android:color/holo_blue_dark"/>

            </LinearLayout>

        </LinearLayout>
   </com.manuelpeinado.fadingactionbar.view.ObservableScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


</FrameLayout>
